#!/bin/bash

EXP=()
YEAR=2020

if [ -f ./input ]; then
    EXP=($(sort <<<$(cat ./input))); unset IFS
fi


for e in "${EXP[@]}"; do
    w=
    z=
    for x in "${EXP[@]}"; do
	w=$(($YEAR - $e))
       	if [[ " ${EXP[@]}" =~ " ${w} " ]] && [ $w > $x ]; then
	    echo "YES: " $e ";" $w $x
	    z=$(($w - $x))
	    if [[ " ${EXP[@]} " =~ " ${z} " ]]; then
	        echo $e $w $z
            fi		   
	elif [[ " ${EXP[@] }" =~ " ${w} " ]] && [ $x > $w ]; then
	    z=$(($x - $w))
	    if [[ " ${EXP[@]} " =~ " ${z} " ]]; then
	        echo $e $w $z
            fi
	fi
    done
done


